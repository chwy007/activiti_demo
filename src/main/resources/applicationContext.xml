<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:component-scan base-package="com.yujizi"/>


    <context:property-placeholder location="classpath:jdbc.properties"/>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.yujizi.dao"/>
        <property name="sqlSessionFactoryBeanName" value="sf1"></property>
    </bean>


    <bean id="sf1" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="configLocation" value="classpath:Mybatis-Config.xml"/>
    </bean>

    <!--shiro相关-->
    <bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
        <property name="securityManager" ref="securityManager"></property>
        <property name="loginUrl" value="/login.jsp"></property>
        <property name="successUrl" value="/index"></property>
        <property name="unauthorizedUrl" value="/unauthorize"></property>
        <property name="filterChainDefinitions">
            <value>
                /login = anon
                <!--                /user/** = perms["second-level"]-->
                <!--                /user/** =roles["staff"]-->
                <!--                /memoryCurve/** = perms["first-level"]-->
                <!--                /memoryCurve/** =roles["manager"]-->

                /** = authc
            </value>
        </property>
    </bean>

    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <property name="realm" ref="realm"></property>
    </bean>

    <bean id="realm" class="com.yujizi.utils.MyRealm"></bean>


    <import resource="activiti.cfg.xml"></import>
</beans>